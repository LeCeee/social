<main class="body-main">
	<h3>Posts</h3>	
	<p class="page-numbers"></p>


	<%= form_for @post , remote: true do |f|  %>
	<%= f.label :content,"New Post"%>
	<p id="field-content"> <%= f.text_field :content %></p>
	<%= f.submit %>
	<% end %>

	<div class="left-sidebar"></div>

	<div class="post-list-container centre-container">
		<ul>
			<% Post.all.reverse.each do |p|%>
				<%= render "post", post: p %>
			<%end%>
		</ul>

	</div>
	<div class="right-sidebar"></div>
</main>